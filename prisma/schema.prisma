generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  inbound   Inbound[]
}

model Inbound {
  id              Int              @id @default(autoincrement())
  description     String
  createdAt       DateTime         @default(now())
  inboundProducts InboundProduct[]
  clientName      String
  client          Client           @relation(fields: [clientName], references: [name], onDelete: Cascade)
}

model InboundProduct {
  id           Int      @id @default(autoincrement())
  product      String
  serialnumber String
  createdAt    DateTime @default(now())
  inbound      Inbound  @relation(fields: [inboundId], references: [id])

  inboundId Int
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  number      String
  createdAt   DateTime @default(now())
}
