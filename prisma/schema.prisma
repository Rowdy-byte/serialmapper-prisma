generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  inbound   Inbound[]
}

// inbound belongs to one client

model Inbound {
  id          Int      @id @default(autoincrement())
  description String
  clientName  String
  createdAt   DateTime @default(now())

  client          Client           @relation(fields: [clientName], references: [name], onDelete: Cascade)
  inboundProducts InboundProduct[]
}

model InboundProduct {
  id           Int      @id @default(autoincrement())
  product      String
  serialnumber String
  createdAt    DateTime @default(now())
  inboundId    Int
  inbound      Inbound  @relation(fields: [inboundId], references: [id], onDelete: Cascade)
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  number      String
  createdAt   DateTime @default(now())
}
